{
  "name": "@acme/ui",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "license": "MIT",
  "files": [
    "dist/**"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/index.css"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./src/css/main.css -o dist/index.css",
    "dev:css": "tailwindcss -i ./src/css/main.css -o ./dist/index.css --watch",
    "build:js": "tsup",
    "dev:js": "tsup --watch",
    "build": "concurrently \"pnpm build:css\" \"pnpm build:js\"",
    "dev": "concurrently \"pnpm dev:css\" \"pnpm dev:js\"",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest"
  },
  "devDependencies": {
    "@acme/tailwind-preset": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "react": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@headlessui/react": "2.0.0-alpha.4",
    "clsx": "^2.1.0"
  }
}
